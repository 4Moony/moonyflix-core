{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": [
      "es2017"
    ],
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "model/*": ["src/model/*"],
      "services/*": ["src/contracts/services/*"]
    },
    "outDir": "./dist",
    "declaration": true,
    "emitDeclarationOnly": false
  },
  "exclude": [
    "node_modules",
    "jest.config.js",
    "coverage",
    "dist",
    "__tests__"
  ]
}
